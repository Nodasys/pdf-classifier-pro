<Window x:Class="PDFClassifierPro.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:PDFClassifierPro.UI.Views.Controls"
        Title="PDF Classifier Pro - Professional PDF Analysis &amp; Redaction Tool" 
        Height="900" Width="1400"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="800">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0" Background="#F0F0F0">
            <MenuItem Header="_File">
                <MenuItem Header="_Open PDF" Click="OnOpenPdfClicked"/>
                <MenuItem Header="_Save" Click="OnSaveClicked"/>
                <Separator/>
                <MenuItem Header="E_xit" Click="OnExitClicked"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="_Classify Document" Click="OnApplyClassificationClicked"/>
                <MenuItem Header="_Auto OCR" Click="OnAutoOcrClicked"/>
            </MenuItem>
            <MenuItem Header="_Redaction">
                <MenuItem Header="_Add Redaction Area" Click="OnRedactAreaClicked"/>
                <MenuItem Header="_Clear Redactions" Click="OnClearRedactionsClicked"/>
                <MenuItem Header="_Export Redacted" Click="OnExportRedactedClicked"/>
            </MenuItem>
            <MenuItem Header="_Pro">
                <MenuItem Header="_Activate Pro" Click="OnActivateProClicked"/>
            </MenuItem>
        </Menu>
        
                    <ToolBar Grid.Row="0" Background="#F8F8F8" BorderBrush="#DDDDDD" BorderThickness="0,1,0,0">
                <Button Content="Open PDF" Click="OnOpenPdfClicked" Margin="2"/>
                <Button Content="Save" Click="OnSaveClicked" Margin="2"/>
                <Separator/>
                <Button Content="Previous Page" Click="OnPreviousPageClicked" Margin="2"/>
                <Button Content="Next Page" Click="OnNextPageClicked" Margin="2"/>
                <Separator/>
                <Button Content="Classify" Click="OnApplyClassificationClicked" Margin="2"/>
                <Button Content="OCR" Click="OnAutoOcrClicked" Margin="2"/>
                <Separator/>
                <Button Content="Add Redaction" Click="OnRedactAreaClicked" Margin="2"/>
                <Button Content="Clear Redactions" Click="OnClearRedactionsClicked" Margin="2"/>
                <Separator/>
                <Button Content="Activate Pro" Click="OnActivateProClicked" Margin="2"/>
            </ToolBar>
        
        <Grid Grid.Row="1" Background="#F5F5F5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300" MinWidth="250"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0" 
                    Background="White" 
                    Margin="5" 
                    CornerRadius="3" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1">
                <views:PdfViewerControl x:Name="Viewer"/>
            </Border>
            
            <Border Grid.Column="1" 
                    Background="White" 
                    Margin="5,5,5,5" 
                    CornerRadius="3" 
                    BorderBrush="#DDDDDD" 
                    BorderThickness="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <TextBlock Grid.Row="0" 
                               Text="Document Information" 
                               FontWeight="Bold" 
                               FontSize="14" 
                               Margin="10,10,10,5" 
                               Foreground="#333333"/>
                    
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto" 
                                  Margin="10,0,10,10">
                        <StackPanel>
                            <GroupBox Header="Classification" 
                                      Margin="0,5,0,10">
                                <StackPanel Margin="5">
                                    <TextBlock Text="Current Level:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="ClassificationText" 
                                               Text="Unclassified" 
                                               Foreground="#666666" 
                                               Margin="0,0,0,10"/>
                                    
                                    <TextBlock Text="Sensitive Terms Found:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>
                                    <ListBox x:Name="SensitiveTermsList" 
                                             Height="80" 
                                             Margin="0,0,0,10"/>
                                </StackPanel>
                            </GroupBox>
                            
                            <GroupBox Header="Redaction Areas" 
                                      Margin="0,5,0,10">
                                <StackPanel Margin="5">
                                    <TextBlock Text="Total Areas:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>
                                    <TextBlock x:Name="RedactionCountText" 
                                               Text="0" 
                                               Foreground="#666666" 
                                               Margin="0,0,0,10"/>
                                    
                                    <Button Content="Clear All Redactions" 
                                            Click="OnClearRedactionsClicked" 
                                            Margin="0,5,0,0"/>
                                </StackPanel>
                            </GroupBox>
                            
                            <GroupBox Header="OCR Status" 
                                      Margin="0,5,0,10">
                                <StackPanel Margin="5">
                                    <TextBlock Text="OCR Text:" 
                                               FontWeight="SemiBold" 
                                               Margin="0,0,0,5"/>
                                    <TextBox x:Name="OcrTextDisplay" 
                                             Height="60" 
                                             TextWrapping="Wrap" 
                                             AcceptsReturn="True" 
                                             IsReadOnly="True" 
                                             VerticalScrollBarVisibility="Auto" 
                                             Margin="0,0,0,10"/>
                                </StackPanel>
                            </GroupBox>
                        </StackPanel>
                    </ScrollViewer>
                    
                    <Border Grid.Row="2" 
                            Background="#F8F8F8" 
                            BorderBrush="#DDDDDD" 
                            BorderThickness="0,1,0,0" 
                            Padding="10">
                        <StackPanel>
                            <TextBlock Text="License Status:" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"/>
                            <TextBlock x:Name="LicenseStatus" 
                                       Text="Free Version" 
                                       Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>
        
        <StatusBar Grid.Row="2" 
                   Background="#F0F0F0" 
                   BorderBrush="#DDDDDD" 
                   BorderThickness="0,1,0,0">
            <StatusBar.Items>
                <StatusBarItem>
                    <TextBlock x:Name="StatusText" 
                               Text="Ready - No document loaded" 
                               Foreground="#333333"/>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem>
                    <TextBlock Text="Pages: " 
                               Foreground="#666666"/>
                </StatusBarItem>
                <StatusBarItem>
                    <TextBlock x:Name="PageInfoText" 
                               Text="0 of 0" 
                               Foreground="#333333"/>
                </StatusBarItem>
                <Separator/>
                <StatusBarItem HorizontalAlignment="Right">
                    <TextBlock Text="PDF Classifier Pro v1.0" 
                               Foreground="#666666"/>
                </StatusBarItem>
            </StatusBar.Items>
        </StatusBar>
    </Grid>
</Window>
